<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <io.github.takusan23.motionlayoutswipefixframelayout.MotionLayoutSwipeFixFrameLayout
        android:id="@+id/activity_main_swipe_fix_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- MotionLayout -->
        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/activity_main_motionlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/activity_main_scene">

            <ImageView
                android:id="@+id/player_image_view"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#252525"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_picture_in_picture_alt_24"
                app:tint="#ffffff" />


            <LinearLayout
                android:id="@+id/player_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/player_image_view"
                app:layout_constraintEnd_toEndOf="@+id/player_image_view"
                app:layout_constraintStart_toStartOf="@+id/player_image_view"
                app:layout_constraintTop_toBottomOf="@+id/player_image_view">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="動画タイトル"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="コメント" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/player_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </androidx.constraintlayout.motion.widget.MotionLayout>

    </io.github.takusan23.motionlayoutswipefixframelayout.MotionLayoutSwipeFixFrameLayout>
</FrameLayout>