<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/fragment_video_player_motion_transition_start">
        <Constraint
            android:id="@+id/player_image_view"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/player_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/player_image_view"
            app:layout_constraintEnd_toEndOf="@+id/player_image_view"
            app:layout_constraintStart_toStartOf="@+id/player_image_view"
            app:layout_constraintTop_toBottomOf="@+id/player_image_view" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fragment_video_player_motion_transition_end">
        <Constraint
            android:id="@+id/player_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/player_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/player_image_view"
            app:layout_constraintStart_toStartOf="@+id/player_image_view"
            app:layout_constraintTop_toBottomOf="@+id/player_image_view" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/fragment_video_player_motion_transition_end"
        app:constraintSetStart="@+id/fragment_video_player_motion_transition_start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/player_image_view"
            app:touchRegionId="@+id/player_image_view" />
    </Transition>
</MotionScene>
